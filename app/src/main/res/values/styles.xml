<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="buttonStyle">@style/Widget.AppCompat.Button.Borderless</item>
    </style>


    <style name="AppTheme.CheckBox" parent="Widget.MaterialComponents.Button.OutlinedButton">
        <item name="strokeColor">@color/black</item>
        <item name="strokeWidth">2dp</item>
        <item name="shapeAppearance">@style/AppTheme.Round</item>
    </style>

    <style name="AppTheme.Round" parent="ShapeAppearance.MaterialComponents.SmallComponent">
        <item name="cornerRadius">50dp</item>
        <item name="cornerFamily">rounded</item>
    </style>


</resources>
